#!/bin/sh

mkdir -p /ext/conf /ext/data /ext/rep2/ic
yes no | cp -Ri /var/www/.conf/* /ext/conf/
yes no | cp -Ri /var/www/.data/* /ext/data/
yes no | cp -Ri /var/www/rep2/.ic/* /ext/rep2/ic/

php /var/www/scripts/ic2.php setup

crond
h2o -c /etc/h2o.conf -m daemon

while true; do
    rm -f /tmp/2chproxy.pid
    sudo -u nobody /usr/local/bin/2chproxy.pl -c /etc/2chproxy.conf
done
